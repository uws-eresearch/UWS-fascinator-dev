                </li>
            #end
            <li><a target="blank" href="/solr/fascinator/select?q=(id:$oid%20AND%20item_type:object)">View Solr Index</a></li>
        #end
        #parseDisplayTemplate("detail/navigation/workflow.vm")
    </ul>
    #parseTemplate("wrapping/main-menu-close.vm")
</div>

